{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "RealEstateDbConnectionString": "Data Source=.;Initial Catalog=RealEstate;Integrated Security=True;TrustServerCertificate=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Warning"
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=.;Initial Catalog=RealEstate;Integrated Security=True;TrustServerCertificate=True",
          "sinkOptionsSection": {
            "tableName": "LogsTable",
            "autoCreateSqlTable": true
          },
          "columnOptionsSection": {
            "additionalColumns": [
              {
                "ColumnName": "RequestDurationMs",
                "PropertyName": "RequestDurationMs",
                "DataType": "bigint"
              }
            ]
          }
        }
      }
    ]
  },


  "AllowedHosts": "*"
}
